<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cyclr Launch Example</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        @Html.ActionLink("Launch Example", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                @if (Request.IsAuthenticated)
                {
                <li class="nav-item @(Request.Url.AbsolutePath.StartsWith("/organisation", StringComparison.OrdinalIgnoreCase) ? "active" : null)">
                    @Html.ActionLink("Organisations", "Index", "Organisation", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item @(Request.Url.AbsolutePath.StartsWith("/contact", StringComparison.OrdinalIgnoreCase) ? "active" : null)">
                    @Html.ActionLink("Contacts", "Index", "Contact", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item @(Request.Url.AbsolutePath.StartsWith("/opportunity", StringComparison.OrdinalIgnoreCase) ? "active" : null)">
                    @Html.ActionLink("Opportunities", "Index", "Opportunity", null, new { @class = "nav-link" })
                </li>
                }
            </ul>
        </div>
        @Html.Partial("_LoginPartial")
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <small>&copy; @DateTime.Now.Year Cyclr Systems Ltd. All rights reserved.</small>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
