@model System.Collections.Generic.IList<Cyclr.LaunchExample.Models.Contact>

<h3>Contacts @Html.ActionLink("Add Contact", "add", null, new { @class = "btn btn-primary float-right" })</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Organisation</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.FirstName</td>
                <td>@c.LastName</td>
                <td>@c.EmailAddress</td>
                <td>@c.PhoneNumber</td>
                <td>
                    @(c.Organisation?.Name)
                </td>
                <td>
                    <div class="float-right">
                        @Html.ActionLink("Delete", "delete", new { c.Id }, new { @class = "btn btn-danger" })
                        @Html.ActionLink("Edit", "edit", new { c.Id }, new { @class = "btn btn-primary" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>