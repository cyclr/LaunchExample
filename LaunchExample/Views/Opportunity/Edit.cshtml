@model Cyclr.LaunchExample.Models.AddOrUpdateOpportunity

<h3>Edit Opportunity</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Opportunity.Contact, new { @class = "col-md-2 control-label" })
        @Html.DropDownListFor(m => m.Opportunity.Contact.Id, Model.Contacts, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Opportunity.Contact.Id)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Opportunity.Name, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.Opportunity.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Opportunity.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Opportunity.Description, new { @class = "col-md-2 control-label" })
        @Html.TextAreaFor(m => m.Opportunity.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Opportunity.DueDate, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.Opportunity.DueDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Opportunity.Status, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.Opportunity.Status, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Opportunity.Value, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.Opportunity.Value, new { @class = "form-control" })
    </div>
    <input type="submit" class="btn btn-success" value="Update" />
    @Html.ActionLink("Cancel", "index", null, new { @class = "btn btn-default" })
}