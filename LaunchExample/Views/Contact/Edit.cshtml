@model Cyclr.LaunchExample.Models.AddOrUpdateContactModel

<h3>Edit Contact</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Contact.FirstName, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.Contact.FirstName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Contact.LastName, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.Contact.LastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Contact.EmailAddress, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.Contact.EmailAddress, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Contact.EmailAddress)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Contact.PhoneNumber, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.Contact.PhoneNumber, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Contact.Organisation, new { @class = "col-md-2 control-label" })
        @Html.DropDownListFor(m => m.Contact.Organisation.Id, Model.Organisations, new { @class = "form-control" })
    </div>
    <input type="submit" class="btn btn-success" value="Update" />
    @Html.ActionLink("Cancel", "index", null, new { @class = "btn btn-default" })
}